<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="horizontal">

        <com.hienthai.baseprojectmvvm.presentation.customview.datetime.WheelYearPicker
            android:id="@+id/yearPicker"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:wheel_atmospheric="true"
            app:wheel_item_align="center"/>

        <com.hienthai.baseprojectmvvm.presentation.customview.datetime.WheelMonthPicker
            android:id="@+id/monthPicker"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            app:wheel_atmospheric="true"
            app:wheel_item_align="center" />

        <com.hienthai.baseprojectmvvm.presentation.customview.datetime.WheelDayPicker
            android:id="@+id/daysPicker"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:wheel_atmospheric="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:wheel_item_align="center" />

        <com.hienthai.baseprojectmvvm.presentation.customview.datetime.WheelDayOfMonthPicker
            android:id="@+id/daysOfMonthPicker"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            app:wheel_atmospheric="true"
            app:wheel_item_align="right" />

        <com.hienthai.baseprojectmvvm.presentation.customview.datetime.WheelHourPicker
            android:id="@+id/hoursPicker"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp30"
            app:wheel_atmospheric="true"
            app:wheel_item_align="center" />

        <com.hienthai.baseprojectmvvm.presentation.customview.datetime.WheelMinutePicker
            android:id="@+id/minutesPicker"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:wheel_atmospheric="true"
            app:wheel_item_align="center" />

    </LinearLayout>

    <View
        android:id="@+id/dtSelector"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp30"
        android:layout_margin="5dp"
        android:layout_gravity="center_vertical"
        android:alpha="0.2"
        android:background="@drawable/bg_date_picker_selected" />

</FrameLayout>
